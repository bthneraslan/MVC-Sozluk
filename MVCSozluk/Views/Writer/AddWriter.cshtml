@model EntityLayer.Concrete.Writer
@{
    ViewBag.Title = "AddWriter";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Yazar Ekleme</h2>
<br />
@using (Html.BeginForm("AddWriter", "Writer", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Yazar Adı")
        @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control",placeholder="Yazar adını giriniz" })
        @Html.ValidationMessageFor(x => x.WriterName)
        <br />
        @Html.Label("Yazar Soyadı")
        @Html.TextBoxFor(x => x.WriterSurName, new { @class = "form-control", placeholder = "Yazar soyadını giriniz" })
        @Html.ValidationMessageFor(x => x.WriterSurName)
        <br />
        @Html.Label("Yazar Hakkında")
        @Html.TextBoxFor(x => x.WriterAbout, new { @class = "form-control", placeholder = "Yazar hakkında giriniz" })
        @Html.ValidationMessageFor(x => x.WriterAbout)
        <br />
         @Html.Label("Yazar Başlık")
        @Html.TextBoxFor(x => x.WriterTitle, new { @class = "form-control", placeholder = "Yazar başlık giriniz" })
        <br />
        @Html.Label("Resim Yolu")
        @Html.TextBoxFor(x => x.WriterImage, new { @class = "form-control", placeholder = "Resim yolu giriniz" })
        <br />
        @Html.Label("Mail")
        @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control", placeholder = "Mail giriniz" })
        <br />
        @Html.Label("Şifre")
        @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control", placeholder = "Şifre giriniz" })
        <br />
        <button class="btn btn-success">Kaydet</button>
    </div>
}

